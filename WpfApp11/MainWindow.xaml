<Window x:Class="CMCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#f4f4f9">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Contract Monthly Claim System" 
                   FontSize="22" FontWeight="Bold" Foreground="#2c3e50"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Tabs -->
        <TabControl Grid.Row="1" FontSize="14" x:Name="MainTabControl">

            <!-- Lecturer Tab -->
            <TabItem Header="Lecturer">
                <StackPanel Margin="20">
                    <TextBlock Text="Submit Monthly Claim" FontWeight="Bold" FontSize="16"/>
                    <Button Content="Submit Claim" Margin="0,10,0,10" Height="35" Width="200" Click="SubmitClaim_Click"/>

                    <TextBlock Text="Upload Supporting Documents" FontWeight="Bold" FontSize="16"/>
                    <Button Content="Upload Document" Margin="0,10,0,10" Height="35" Width="200" Click="UploadDocument_Click"/>

                    <TextBlock Text="Track Claim Status" FontWeight="Bold" FontSize="16"/>
                    <ListView x:Name="LecturerClaimList" Height="200" Margin="0,10,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100" DisplayMemberBinding="{Binding ClaimId}"/>
                                <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Last Updated" Width="200" DisplayMemberBinding="{Binding LastUpdated}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>

            <!-- Coordinator Tab -->
            <TabItem Header="Programme Coordinator">
                <StackPanel Margin="20">
                    <TextBlock Text="Verify Claims" FontWeight="Bold" FontSize="16"/>
                    <ListView x:Name="CoordinatorClaimList" Height="200" Margin="0,10,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100" DisplayMemberBinding="{Binding ClaimId}"/>
                                <GridViewColumn Header="Lecturer" Width="150" DisplayMemberBinding="{Binding LecturerName}"/>
                                <GridViewColumn Header="Status" Width="120" DisplayMemberBinding="{Binding Status}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Verify Selected Claim" Height="35" Width="220" Click="VerifyClaim_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Academic Manager Tab -->
            <TabItem Header="Academic Manager">
                <StackPanel Margin="20">
                    <TextBlock Text="Approve Claims" FontWeight="Bold" FontSize="16"/>
                    <ListView x:Name="ManagerClaimList" Height="200" Margin="0,10,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100" DisplayMemberBinding="{Binding ClaimId}"/>
                                <GridViewColumn Header="Lecturer" Width="150" DisplayMemberBinding="{Binding LecturerName}"/>
                                <GridViewColumn Header="Status" Width="120" DisplayMemberBinding="{Binding Status}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Approve Selected Claim" Height="35" Width="220" Click="ApproveClaim_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
